NGINX_HOST=nginx
RTMP_PORT=1935
HTTP_PORT=8080
DB_NAME=streaming_db
DB_USER=root
DB_PASSWORD=cntt15723
DB_HOST=db
FFMPEG_HOST=ffmpeg
RTMP_HLS_PATH=/var/www/html/hls
RTMP_APP_NAME=live

# HLS Configuration for Low Latency
HLS_FRAGMENT_DURATION=0.5
HLS_PLAYLIST_LENGTH=2
HLS_CLEANUP=on
HLS_SYNC=50ms
HLS_CACHE=off

# RTMP Low Latency Settings
RTMP_BUFFER_SIZE=500
RTMP_MAX_STREAMS=10
RTMP_TIMEOUT=5s
RTMP_PING=1s
RTMP_PING_TIMEOUT=1s

# Stream Quality Settings
STREAM_KEYFRAME_INTERVAL=1
STREAM_GOP_SIZE=1
STREAM_PRESET=ultrafast
STREAM_PROFILE=baseline
STREAM_TUNE=zerolatency

# Additional HLS Optimizations
HLS_FLAGS=delete_segments+split_by_key+discont_sequence+low_latency
HLS_START_NUMBER_SOURCE=datetime
HLS_MAX_QUEUE_LENGTH=2
HLS_SEGMENT_TYPE=fmp4
HLS_PART_LENGTH=0.2

VITE_HLS_URL=http://localhost:8080
VITE_RTMP_URL=rtmp://localhost:1935/live
VITE_API_URL=http://localhost:3000
